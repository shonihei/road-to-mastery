def search(target, lst):
    if not target:
        return False
    else:
        return searchAux(target, lst, 0, len(lst) - 1)

def searchAux(target, lst, lo, hi):
    if lo >= hi:
        return False
    mid = len(lst) // 2
    if lst[mid] == target:
        return True
    elif lst[mid] > target:
        return searchAux(target, lst[:mid], lo, mid)
    else:
        return searchAux(target, lst[mid:], mid, hi)

def main():
    lst = [1, 4, 5, 8, 12, 13, 15, 18]
    print(search(5, lst))
